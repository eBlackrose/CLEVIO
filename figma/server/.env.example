# CLEVIO Backend Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# SQLite for development (file path), Postgres connection string for production
DATABASE_URL=./dev.db

# JWT/Session Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production

# Application URLs
APP_BASE_URL=http://localhost:5173
API_BASE_URL=http://localhost:3001

# Email Configuration
# Set EMAIL_MODE to 'log' for development (logs to console)
# Set EMAIL_MODE to 'sendgrid' for production (requires SendGrid API key)
EMAIL_MODE=log
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@clevio.com

# OTP Configuration
OTP_EXP_MINUTES=10
OTP_MAX_ATTEMPTS=5
OTP_RESEND_COOLDOWN_SECONDS=30

# Admin Seeding (Development Only)
DEFAULT_ADMIN_EMAIL=admin@clevio.com
DEFAULT_ADMIN_PASSWORD=admin123

# Security
BCRYPT_ROUNDS=10
